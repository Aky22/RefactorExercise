{
    "name": "erosa/refactor_exercise",
    "description": "Refactor exercise project for Webshippy interview",
    "type": "project",
    "authors": [
        {
            "name": "Eros Akor",
            "email": "erosakos02@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "RefactorExercise\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { "RefactorExercise\\Tests\\": "tests/" }
    },
    "require-dev": {
        "phpunit/phpunit": "9",
        "ext-json": "*"
    },
    "scripts": {
        "test": "vendor\\bin\\phpunit.bat --whitelist src --coverage-html coverage --no-configuration tests"
    }
}
